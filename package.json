{
  "name": "dynamic-import-assets",
  "version": "1.0.3",
  "description": "Dynamic Import Assets like JavaScript and CSS.",
  "keywords": [
    "browser",
    "import",
    "css",
    "js",
    "loader"
  ],
  "homepage": "https://github.com/azu/dynamic-import-assets",
  "bugs": {
    "url": "https://github.com/azu/dynamic-import-assets/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/dynamic-import-assets.git"
  },
  "license": "MIT",
  "author": "azu",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist-*/",
    "bin/"
  ],
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "build:ts": "tsc -p .",
    "clean": "rimraf lib/",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "# mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "microbundle": "^0.11.0",
    "mocha": "^7.1.1",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.1",
    "ts-node-test-register": "^8.0.1",
    "typescript": "^3.8.3"
  }
}
